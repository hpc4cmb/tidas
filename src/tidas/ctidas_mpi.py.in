libmpi.ctidas_mpi_dist_uniform.restype = None
libmpi.ctidas_mpi_dist_uniform.argtypes = [ MPI_Comm, ct.c_ulong, ct.POINTER(ct.c_ulong), ct.POINTER(ct.c_ulong) ]

def mpi_dist_uniform(comm, n):
    comm_ptr = MPI._addressof(comm)
    c_comm = MPI_Comm.from_address(comm_ptr)
    offset = ct.c_ulong(0)
    nlocal = ct.c_ulong(0)
    libmpi.ctidas_mpi_dist_uniform(c_comm, n, ct.byref(offset), ct.byref(nlocal))
    return int(offset.value), int(nlocal.value)    

